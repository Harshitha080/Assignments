public class HighestSalesDay {
    public static void main(String[] args){
        int[] sales={100,200,300,800,250,350};
        int max_Sales=sales[0];
        int day=0;
        for(int i=0;i<sales.length;i++){
        if(max_Sales<sales[i]){
            max_Sales=sales[i];
            day=i;
        }
        }
    System.out.println("The highest sales occured on day :" + (day + 1));
}
}
